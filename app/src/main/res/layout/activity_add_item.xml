<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#F2C2C2"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Add Item"
        android:fontFamily="@font/pacifico"
        android:textColor="#115E83"
        android:textSize="40dp" />


    <EditText
        android:id="@+id/addItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="5dp"
        android:focusable="true"
        android:hint="Enter Item Name"
        android:textColorHighlight="#115E83"
        android:textColorHint="#115E83" />

    <EditText
        android:id="@+id/addDescription"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:layout_below="@+id/addItem"
        android:layout_alignEnd="@+id/addItem"
        android:layout_alignRight="@+id/addItem"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:ems="10"
        android:hint="Description"
        android:inputType="text"
        android:textColorHint="#115E83" />


    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-243dp"
        android:layout_marginRight="-243dp"
        android:layout_marginBottom="250dp"
        android:layout_toStartOf="@+id/textview"
        android:layout_toLeftOf="@+id/textview"
        android:backgroundTint="#115E83"
        android:text="Add" />

    <ImageView
        android:id="@+id/listItem"
        android:layout_width="124dp"
        android:layout_height="86dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="395dp"
        android:layout_marginEnd="-243dp"
        android:layout_marginRight="-150dp"
        android:layout_marginBottom="105dp"
        android:onClick="love"
        android:src="@drawable/item_list"
        tools:ignore="OnClick" />


</RelativeLayout>
